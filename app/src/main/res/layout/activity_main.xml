<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/option_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="5">

        <HorizontalScrollView
            android:layout_width="179dp"
            android:layout_height="match_parent">

        </HorizontalScrollView>

        <Button
            android:id="@+id/record"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/show_oct"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="oct: 1"
            android:textSize="20dp"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/metronome"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/beat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="5">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pad_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.5">

        <LinearLayout
            android:id="@+id/buttonLine_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/buttonLayout_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout_1_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout_1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout_1_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_1_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLine_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/buttonLayout_2_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_2_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_2_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp">
                <Button
                    android:id="@+id/button_2_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonLayout_2_4"
                android:layout_width="match_parent"
